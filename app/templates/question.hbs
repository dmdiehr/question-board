<h1>{{model.title}}</h1>

<p>
  {{model.body}}
</p>
<h4>-{{model.author}}</h4>
{{edit-question question=model editQuestion="editQuestion" deleteQuestion="deleteQuestion" dontEdit="dontEdit"}}
<hr>

<h4 class='text-center'>Answers</h4>
{{#each model.answers as |answer|}}
  <h5>{{answer.author}} says:</h5>
  <p>"{{answer.text}}"</p>
  <button {{action "deleteAnswer" answer}}>Too Dumb</button>
  <br><br>
  <hr>
{{/each}}

{{new-answer saveAnswer="saveAnswer" question=model}}
