{{#unless userName.request}}
  {{#if userName.signedIn}}
    {{#if addNewAnswer}}
      <div>
        <form>
          <div class="form-group">
            {{textarea class="big" value=text}}
          </div>
          <div class="form-group">
            <label for="author">Author</label>
            {{input value=author id="author"}}
          </div>
          <button {{action 'saveAnswer'}}>Save</button>
          <button {{action 'dontSaveAnswer'}}>NVM</button>
        </form>
      </div>
    {{else}}
      <button {{action 'newAnswerForm'}}>Tell us already</button>
    {{/if}}
  {{/if}}
{{/unless}}
