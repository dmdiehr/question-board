<h1>{{question.title}}</h1>
<h5>Score: {{question.score}}</h5>

{{{text-format question.body}}}

<button {{action 'upVoteQuestion' question}}>UpVote</button>
<button {{action 'downVoteQuestion' question}}>DownVote</button>

<h4>-{{question.author}}</h4>
{{edit-question question=question editQuestion="editQuestion" deleteQuestion="deleteQuestion" dontEdit="dontEdit"}}
<hr>

<h4 class='text-center'>Answers</h4>
{{#each question.answers as |answer|}}
  {{answer-tile answer=answer deleteAnswer="deleteAnswer" upVoteAnswer="upVoteAnswer" downVoteAnswer="downVoteAnswer"}}
{{/each}}
