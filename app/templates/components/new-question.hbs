{{#if userName.signedIn}}
  {{#if addNewQuestion}}
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>
        <div class="form-group">
          <div>
            <label for="body">Body</label>
          </div>
          {{textarea class="big" value=body id="body"}}
        </div>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>
        <button {{action 'saveQuestion'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'newQuestionForm'}}>Ask Question</button>
  {{/if}}
{{/if}}
