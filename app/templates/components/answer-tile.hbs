<h5>Score: {{answer.score}}</h5>
  <h5>{{answer.author}} says:</h5>
  {{{body-format answer.text}}}
  {{{timestamp-format answer.timestamp}}}

  {{#if userName.signedIn}}
    <button {{action 'upVoteAnswer' answer}}>UpVote</button>
    <button {{action 'downVoteAnswer' answer}}>DownVote</button>
  {{/if}}
  {{#if userName.isAdmin}}
    <button {{action "deleteAnswer" answer}}>Too Dumb</button>
  {{/if}}
  <br><br>
  <hr>
